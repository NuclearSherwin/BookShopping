@model BookShopping.Models.User

@{
    ViewBag.Title = "Edit profile";
    Layout = "_Layout";
}


<h2 class="text-center">Update User</h2>
<div class="container">
    <a class="btn btn-primary m-3" asp-area="UnAuthenticated" asp-controller="Home" asp-action="Index">
        Return to home
        <i class="fa-solid fa-house"></i>
    </a>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Edit user profile</h1>
            <form method="post">
                <input asp-for="Id" class="form-control" hidden>
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input type="text" asp-for="FullName" required="required" class="form-control" placeholder="Fullname">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input class="form-control" required="required" asp-for="Address" rows="3" placeholder="Address"></input>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNum"></label>
                    <input class="form-control" required="required" asp-for="PhoneNum" rows="3" placeholder="Phone number"></input>
                    <span asp-validation-for="PhoneNum" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Done</button>
            </form>
        </div>
    </div>
</div>
