@model BookShopping.Models.Order

@{
    Layout = "_Layout";
}

<h1>Order Details</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                Order Id
            </dt>
            <dd>
                @Model.Id
            </dd>
            <dt>
                Address
            </dt>
            <dd>
                @Model.Address
            </dd>
            <dt>
                Total
            </dt>
            <dd>
                @Model.Total.ToString("C")
            </dd>
            <dt>
                Order Date
            </dt>
            <dd>
                @Model.OrderDate.ToShortDateString()
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h4>Order Details</h4>
        <hr />
        <div>
            <partial name="_OrderDetails" model="@Model.Id" />
        </div>
    </div>
</div>
