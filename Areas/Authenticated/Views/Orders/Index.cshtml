@model List<BookShopping.Models.Order>

@{
    Layout = "_Layout";
}

<h2>Orders</h2>

<table class="table">
    <thead>
    <tr>
        <th>Order Id</th>
        <th>User Id</th>
        <th>Address</th>
        <th>Total</th>
        <th>Order Date</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.UserId</td>
            <td>@order.Address</td>
            <td>@order.Total</td>
            <td>@order.OrderDate.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@order.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>