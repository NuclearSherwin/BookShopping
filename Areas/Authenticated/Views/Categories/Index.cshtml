@model List<BookShopping.Models.Category>

@{
    ViewBag.Title = "Category";
    Layout = "_Layout";
}

<div>
    <h2>Category</h2>
    
    <a class="btn btn-success" asp-area="Authenticated" asp-controller="Categories" asp-action="Create">Create new Category</a>
    
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <th scope="row">@category.Id</th>
            <th scope="row">@category.Name</th>
            <th scope="row">@category.Description</th>
            <td>
                <a type="button" class="btn btn-success"
                   asp-controller="Categories"
                   asp-action="Update"
                   asp-route-categoryId="@category.Id">Update</a>
            </td>
    
        }
        </tbody>
    </table>
</div>
