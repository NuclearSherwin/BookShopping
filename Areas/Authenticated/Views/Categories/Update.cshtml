@model BookShopping.Models.Category

@{
    Layout = "_Layout";
}
<br>
    <h2>Update Category</h2>
    <form method="post">
        <input asp-for="Id" hidden/>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" id="exampleInputCategory" placeholder="Type">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text" class="form-control" id="exampleInputCategory" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        <button type="submit" class="btn btn-primary">Approve</button>
    </form>
</br>