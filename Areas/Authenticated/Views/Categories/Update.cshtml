@model BookShopping.Models.Category

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<br>
    <h2>title</h2>
    <form method="post">
        <input asp-for="Id" hidden/>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" id="exampleInputCategory" placeholder="Type">
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text" class="form-control" id="exampleInputCategory" placeholder="Description">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</br>