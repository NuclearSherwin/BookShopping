@model BookShopping.Models.Category

@{
    ViewData["Title"] = "Update Category";
    Layout = "_Layout";
}

<h2 class="text-center">Category update</h2>
<div class="container">
    <a class="btn btn-primary m-3" asp-area="UnAuthenticated" asp-controller="Home" asp-action="Index">
        Return to home
        <i class="fa-solid fa-house"></i>
    </a>
    <a class="btn btn-primary m-3" asp-area="Authenticated" asp-controller="Categories" asp-action="Index">
        View all categories
        <i class="fa-solid fa-list"></i>
    </a>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Category update</h1>
            <form method="post">
                <input asp-for="Id" hidden/>
                
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Modify Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Modify description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>

